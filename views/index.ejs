<form action="/createData" method="post">   
    <input type="hidden" name="id" value="<%= (editResult) ? editResult.id : '' %>">

    <label for="username">Name:</label>
    <input type="text" id="username" name="username" value="<%= (editResult) ? editResult.username : '' %>">
    <br><br>

    <label for="password">Password:</label>
    <input type="text" id="password" name="password" value="<%= (editResult) ? editResult.password : '' %>">
    <br><br>

    <label for="number">Phone No:</label>
    <input type="number" id="number" name="number" value="<%= (editResult) ? editResult.phoneno : '' %>">
    <br><br>

    <label for="city">City:</label>
    <input type="text" id="city" name="city" value="<%= (editResult) ? editResult.city : '' %>">
    <br><br>

    <input type="submit" value="<%= (editResult) ? 'Update' : 'Create' %>">
</form>

<br>

<table border="1" cellpadding="10" cellspacing="0">
    <thead>
        <tr>
            <th>Id</th>
            <th>Username</th>
            <th>Password</th>
            <th>Phone No</th>
            <th>City</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        <% result.forEach((item) => { %>
            <tr>
                <td><%= item.id %></td>
                <td><%= item.username %></td>
                <td><%= item.password %></td>
                <td><%= item.phoneno %></td>
                <td><%= item.city %></td>
                <td><a href="/editData?edit=<%= item.id %>">Edit</a></td>
                <td>
                    <form action="/deleteData" method="POST" style="display:inline;">
                        <input type="hidden" name="id" value="<%= item.id %>">
                        <button type="submit" onclick="return confirm('Are you sure you want to delete this user?')">Delete</button>
                    </form>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>
