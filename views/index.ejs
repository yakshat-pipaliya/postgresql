<form action="/createData" method="post">   
    <input type="hidden" name="id" value="<%= (editResult) ? editResult.id : '' %>">

    <label for="product">Product:</label>
    <input type="text" id="product" name="product" value="<%= (editResult) ? editResult.product : '' %>">
    <br><br>

    <label for="category">Category:</label>
    <input type="text" id="category" name="category" value="<%= (editResult) ? editResult.category : '' %>">
    <br><br>

    <label for="amount">Amount:</label>
    <input type="number" step="0.01" id="amount" name="amount" value="<%= (editResult) ? editResult.amount : '' %>">
    <br><br>

    <input type="submit" value="<%= (editResult) ? 'Update' : 'Create' %>">
</form>

<br>

<table border="1" cellpadding="10" cellspacing="0">
    <thead>
        <tr>
            <th>Id</th>
            <th>Product</th>
            <th>Category</th>
            <th>Amount</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        <% result.forEach((item) => { %>
            <tr>
                <td><%= item.id %></td>
                <td><%= item.product %></td>
                <td><%= item.category %></td>
                <td><%= item.amount %></td>
                <td><a href="/editData?edit=<%= item.id %>">Edit</a></td>
                <td>
                    <form action="/deleteData" method="POST" style="display:inline;">
                        <input type="hidden" name="id" value="<%= item.id %>">
                        <button type="submit" onclick="return confirm('Are you sure you want to delete this item?')">Delete</button>
                    </form>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>
